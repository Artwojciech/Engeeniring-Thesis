						],
						"url": {
							"raw": "{{base_url}}/favourites/:photoId",
							"host": ["{{base_url}}"],
							"path": ["favourites", ":photoId"],
							"variable": [
								{
									"key": "photoId",
									"value": ""
								}
							]
						}
					}
				},
				{
					"name": "Remove from Favourites",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/favourites/:photoId",
							"host": ["{{base_url}}"],
							"path": ["favourites", ":photoId"],
							"variable": [
								{
									"key": "photoId",
									"value": ""
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Change Username",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
